{% extends 'base.html.twig' %}

{% block title %}Nouvelle recette{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Créer une nouvelle recette</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">{{ message }}</div>
    {% endfor %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name) }}
                {{ form_row(form.time) }}
                {{ form_row(form.nbPeople) }}
                {{ form_row(form.difficulty) }}
                {{ form_row(form.description) }}
                {{ form_row(form.price) }}
                {{ form_row(form.isFavorite) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.ingredients) }}
            </div>
        </div>
        {{ form_row(form.submit) }}
    {{ form_end(form) }}
    <a href="{{ path('admin_recettes') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
</div>
{% endblock %} 