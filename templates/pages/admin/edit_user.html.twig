{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier l'utilisateur : {{ user.email }}</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">{{ message }}</div>
    {% endfor %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.email) }}
                {{ form_row(form.pseudo) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.roles) }}
            </div>
        </div>
        {{ form_row(form.submit) }}
    {{ form_end(form) }}
    <a href="{{ path('admin_users') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
</div>
{% endblock %} 